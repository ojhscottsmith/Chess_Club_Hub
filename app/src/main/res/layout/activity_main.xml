<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_cch"
    >


        <RelativeLayout
            android:layout_width="409dp"
            android:layout_height="729dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/home_page"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/brown"
                android:src="@drawable/ic_home"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/event_page"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_toRightOf="@+id/home_page"
                android:layout_marginTop="55dp"
                android:background="@color/brown"
                android:src="@drawable/ic_calendar"
                android:adjustViewBounds="true"
                android:padding="15dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/game_page"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_toRightOf="@+id/event_page"
                android:layout_marginTop="55dp"
                android:background="@color/brown"
                android:src="@drawable/ic_game"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/announcement_page"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_toRightOf="@+id/game_page"
                android:layout_marginTop="55dp"
                android:background="@color/brown"
                android:src="@drawable/announcements"
                android:adjustViewBounds="true"
                android:padding="15dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/login_page"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_toRightOf="@+id/announcement_page"
                android:layout_marginTop="55dp"
                android:src="@drawable/admin"
                android:background="@color/brown"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent" />



            <Space
                android:layout_width="match_parent"
                android:layout_height="63dp" />

